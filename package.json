{
  "name": "markdown-ssg",
  "version": "0.1.0",
  "description": "Fast, minimal static site generator. Markdown and MDX to HTML with zero configuration.",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "markdown-ssg": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/cli.ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "markdown",
    "mdx",
    "static-site-generator",
    "ssg",
    "html",
    "cli"
  ],
  "author": "Keira Hopkins",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@mdx-js/mdx": "^3.1.1",
    "chokidar": "^4.0.3",
    "marked": "^17.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NotKeira/markdown-ssg.git"
  },
  "bugs": {
    "url": "https://github.com/NotKeira/markdown-ssg/issues"
  },
  "homepage": "https://github.com/NotKeira/markdown-ssg#readme"
}